{
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"json"
	],
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"testRegex": "/lib/.*\\.(test|spec).(ts|tsx|js)$",
	"collectCoverageFrom": [
		"src/**/*.{js,jsx,tsx,ts}",
		"!**/node_modules/**",
		"!**/vendor/**"
	],
	"coverageReporters": [
		"json",
		"lcov"
	]
}